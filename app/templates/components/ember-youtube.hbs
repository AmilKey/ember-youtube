<div id="ember-youtube-player"></div>

{{#if debug}}
	<p>Or inside the component.</p>

	<menu>
		<button {{action 'togglePlay'}}>{{#if isPlaying}}Pause{{else}}Play{{/if}}</button>
		<button {{action 'toggleVolume'}}>{{#if isMuted}}Unmute{{else}}Mute{{/if}}</button>
	</menu>

	<p>{{currentTimeFormatted}}/{{durationFormatted}}</p>
	<p><progress {{bind-attr value=currentTime max=duration}}></progress></p>

	<p><code>
		id: {{ytid}}<br>
		state: {{playerState}}<br>
		isMuted: {{isMuted}}<br>
		isPlaying: {{isPlaying}}<br>
	</code></p>
{{/if}}
